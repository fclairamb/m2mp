/var/log/nsq/*.log {
	delaycompress
	daily
	rotate 365
	missingok
	su nsq

	postrotate
		# We trigger log file re-opening
		killall -SIGUSR2 supervisord
	endscript
}

/var/log/nsq/topics/*.log {
	delaycompress
	daily
	rotate 365
	missingok
	su nsq

	postrotate
		# We have to restart the logging process to reopen the the logging
		# files
		supervisorctl restart nsq:nsq_log_all_topics
	endscript
}
